<form action="<%= uri_for('/memo') %>" method="post">
  <input type="hidden" name="sid" value="<%= session.token %>">
  <textarea name="content"></textarea>
  <br>
  <input type="checkbox" name="is_private" value="1"> private
  <input type="submit" value="post">
</form>

<h3>my memos</h3>

<ul>
<% memos.forEach(function(memo) { %>
<li>
  <a href="<%= uri_for('/memo/') %><%= memo.id %>"><%= memo.content.split(/\r?\n/)[0] %></a> <%= memo.created_at %>
<%   if (memo.is_private) { %>
[private]
<%   } %>
</li>
<% }); %>
</ul>


